#!/bin/sh

set -e

mkdir -p upload build

input_md='desktop.md'
output_pdf="${input_md}"

# if file already exists in upload starting with same name, delete
output_jpeg=""

pandoc src/"$input_md" --pdf-engine=xelatex -o build/"$input_md".pdf

pdftoppm -jpeg -r 300 build/"$input_md".pdf build/"$input_md".jpeg

# IMPORTANT(Ryan): Every jpeg file in upload directory will be uploaded to Google Photos.
# Google Photos API only permits uploading. No deleting.
# âˆ´, the contents of the upload directory should always be considered to prevent duplicates
# being uploaded.



